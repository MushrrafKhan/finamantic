<% layout('../layouts/list') -%>
    <div class="content-body">
        <div class="container-fluid mt-3">
            <div class="row row-margin">
                <div class="col-lg-12">
                    <div class="card xyz">
                        <div class="card-body">
                            <div class="position-absolute top-left">
                                <h4 class="text-white">
                                    <%=cms.title%>
                                </h4>
                            </div>
                        </div>
                        <div class="card">
                            <div class="card-body">
                                <form action="/cms/cmsdata/<%=cms._id%>" method="Post">
                                    <div class="active-member">
                                        <div class="form-group row">
                                            <label class="col-lg-12 col-form-label" for="val-username">
                                                <h4>FAQ</h4>
                                                <!-- <span class="text-danger">*</span> -->
                                            </label>
                                            <div class="col-lg-6">
                                                <textarea type="text" id="editor" name="description"
                                                    class="form-control" required><%=cms.description%></textarea>
                                            </div>
                                        </div>
                                        <div class="form-group  row">
                                            <div class="col-lg-6">
                                                <button style="margin-left: 30px 10px;" type="submit"class="btn btn-primary ">Submit</button><br>
                                            </div>
                                        </div>
                                    </div>
                                </form>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <script src="https://cdn.ckeditor.com/4.16.2/standard/ckeditor.js"></script>
    <script type="text/javascript" src="//cdn.jsdelivr.net/jquery/1/jquery.min.js"></script>
    <script>
        CKEDITOR.replace('editor');
    </script>