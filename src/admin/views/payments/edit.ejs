<% layout('../layouts/admin') -%>
<div class="row">
    <div class="col-md-12">
        <div class="card bg-transparent">
            <div class="contact-header d-flex align-items-sm-center media flex-column flex-sm-row bg-white mb-30">
                <div class="contact-header-left media-body d-flex align-items-center mr-4 col-6">
                    <!-- Add Concierge -->
                    <div class="page-title-box">
                        <div class="page-title-left">
                            <ol class="breadcrumb m-0">
                                <li class="breadcrumb-item"><a href="/">Dashboard</a></li>
                                <li class="breadcrumb-item"><a href="/schools">School Manager</a></li>
                                <li class="breadcrumb-item active"><a href="javascript: void(0);">Edit</a></li>
                            </ol>
                        </div>
                    </div>
                    <!-- End Add Concierge -->
                </div>
            </div>
         </div>
    </div>
</div>

<div class="row">
    <div class="col-12">
        <div class="card">
            <div class="card-body">
                <form method="post" id="editSchoolForm" enctype="multipart/form-data">
                    <div class="row">
                        <div class="col-lg-6">
                            <div class="form-group mb-3">
                                <label>First Name<span class="text-danger">*</span></label>
                                <input type="text" name="first_name" class="form-control" value="<%= skool.first_name %>" required>
                                <div class="text-danger name"></div>
                            </div>
                        </div>
                        <div class="col-lg-6">
                            <div class="form-group mb-3">
                                <label>Last Name<span class="text-danger">*</span></label>
                                <input type="text" name="last_name" class="form-control" value="<%= skool.last_name %>" required>
                                <div class="text-danger name"></div>
                            </div>
                        </div>

                        <div class="col-lg-6">
                            <div class="form-group mb-3">
                                <label>School Name<span class="text-danger">*</span></label>
                                <input type="text" name="school_name" class="form-control" value="<%= skool.school_name %>" required>
                                <div class="text-danger name"></div>
                            </div>
                        </div>

                        <div class="col-lg-6">  
                            <div class="form-group mb-3">
                                <label>Image</label>
                                <div class="profile-pic-div p-absolute">                             
                                    <input type="file" id="fileUpload" accept="image/*" name="image">
                                </div>  
                            </div>
                            <div class="form-group mb-3">
                                <div class="profile-pic-div p-absolute">  
                                    <% if(skool.image){ %>                            
                                    <img src="<%= s3Base %><%= skool.image %>" width="200" height="100"/>
                                    <% } %>   
                                </div>  
                            </div>
                        </div>

                        <div class="col-lg-6">
                            <div class="form-group mb-3">
                                <label>Enter Email<span class="text-danger">*</span></label>
                                <input type="text" id="email" name="email" class="form-control" placeholder="enter email address" value="<%= skool.email %>" required>
                                <div class="text-danger email"></div>
                            </div>
                        </div>

                        <div class="col-lg-12 text-left">
                            <div class="form-group mb-3 text-center">
                                <button id="editSchoolForm" type="submit" class="btn btn-primary waves-effect waves-light">Submit</button>
                            </div>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

<script>
    $(document).ready(function(){
      $("#editSchoolForm").validate({
        // Specify validation rules
        rules: {
         first_name: {
                required: true,
                minlength: 3,
                maxlength: 30,
         },
         last_name: {
                required: true,
                minlength: 3,
                maxlength: 30,
         },
         school_name: {
                required: true,
                minlength: 3
         },
         email: {
                required: true,
                minlength: 3,
                maxlength: 50,
                pattern: /^(([^<>()[\]\\.,;:\s@"]+(\.[^<>()[\]\\.,;:\s@"]+)*)|(".+"))@((\[[0-9]{1,3}\.[0-9]{1,3}\.[0-9]{1,3}\.[0-9]{1,3}])|(([a-zA-Z\-0-9]+\.)+[a-zA-Z]{2,}))$/
         },
        },
        messages: { 
            first_name: {
                required: 'First Name is required.',
                minlength: 'First Name is required to be minimum 3 chars.',
                maxlength: 'First Name is required to be maximum 20 chars.',
            },
            last_name: {
                required: 'Last Name is required.',
                minlength: 'Last Name is required to be minimum 3 chars.',
                maxlength: 'Last Name is required to be maximum 30 chars.',
            },
            school_name: {
                required: 'School Name is required.',
                minlength: 'School Name is required to be minimum 3 chars.'
            },
            email: {
                required: 'Email is required.',
                minlength: 'Email is required to be minimum 3 chars.',
                maxlength: 'Email is required to be maximum 50 chars.',
                pattern: 'Email is required to be a valid email.',
            },
        },
      });
    });
 </script>